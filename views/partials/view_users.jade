#containerUsers.container(style='block;')
	.alert.alert-danger(role='alert')
		span.glyphicon.glyphicon-exclamation-sign(aria-hidden='true')
		span.sr-only Error:
		| Enter a valid email address
	div.alert.alert-info(ng-show="loading") Loading
	.row.col-md-12(style='padding-bottom:10px;')
		.btn-group.col-lg-3.left-search-box
			.input-group
				span.input-group-addon
					input(type='checkbox')
					|  All
				input.form-control.input-sm(type='text', placeholder='@account', ng-model="search.screen_name")
				span.input-group-btn
					button.btn.btn-default.btn-sm(type='button')
						span.glyphicon.glyphicon-search
		.btn-group.pull-right
			a#btnAssignAccnts2List.btn.btn-default.btn-sm(type='button', href='/lists/index')
				span.glyphicon.glyphicon-th-list
				| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;List
			button#btnBackLists.btn.btn-default.btn-sm(type='button')
				span.glyphicon.glyphicon-remove
				| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Remove Selected
			button.btn.btn-default.btn-sm(type='button')
				span.glyphicon.glyphicon-file
				| &#x9;&#x9;&#x9;&#x9;&#x9;&#x9;Copy
	.row.col-md-12
		.panel.panel-default
			.panel-heading.clearfix
				h4.panel-title.pull-left(style='padding-top: 7.5px;') List members 
			.panel-body
				div(style='border-bottom:1px solid #999; clear:both;', ng-repeat="user in users | filter:search")
					div(style='float:left; margin-top: 10px; max-width: 750px;')
						.stream-item-header
							a.account-group(href='https://twitter.com/{{user.screen_name}}', target='_blank')
								span(style='float: left; padding-right: 10px; margin-top: 15px;')
									input(type='checkbox')
								| &#x9;&#x9;&#x9;&#x9;&#x9;
								img.avatar(src='{{user.profile_image_url}}', alt='', style='float: left; margin-top: 3px; padding-right:10px;')
								| &#x9;&#x9;
								| &#x9;&#x9;&#x9;&#x9;&#x9;
								strong {{user.name}}
								| &#x9;&#x9;
								| &#x9;&#x9;&#x9;&#x9;&#x9;
								span @{{user.screen_name}}
						| &#x9;
						| &#x9;&#x9;&#x9;
						p.bio {{user.description}}
					| &#x9;
					| &#x9;&#x9;
					div(style='float: right; margin-top:10px')
						.btn-group.pull-right
							button.btn.btn-default.btn-sm(type='button') Unfollow
							| &#x9;&#x9;&#x9;
							| &#x9;&#x9;&#x9;&#x9;
							button.btn.btn-default.btn-sm(type='button') Remove
							| &#x9;&#x9;&#x9;
							| &#x9;&#x9;&#x9;&#x9;
							button.btn.btn-default.btn-sm(type='button') Open
					| &#x9;&#x9;
					div(style='clear:both;')
			
