extends layout_logged

block content
	.content-wrapper
			.container
				.row(ng-controller="errorController")
					.col-md-12
						.alert.alert-success(ng-show="info",class="ng-hide" , style='display:none') {{info_message}}
						.alert.alert-success(data-loading, style='display:none') Loading...
						.alert.alert-success(id="PreLoading") Loading your stuff from Twitter, this takes some time...
						.alert.alert-danger(ng-show="error", class="ng-hide") {{error_message}}
				.row
					.col-md-12
						h4.page-head-line(ng-bind="title")
				| 
				div(ng-view)